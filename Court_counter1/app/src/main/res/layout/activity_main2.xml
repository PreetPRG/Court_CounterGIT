<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.court_counter1.Main2Activity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/nba_logo" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Team A"
            android:textAllCaps="true"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/team_a_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="0"
            android:textColor="#ffffff"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="increment_a_by_three"
            android:text="+3" />

        <Button
            android:id="@+id/button_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="increment_a_by_two"
            android:text="+2" />

        <Button
            android:id="@+id/button_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="increment_a_by_one"
            android:text="Free Shot" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="192dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Team B"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textAllCaps="true" />
        <TextView
            android:id="@+id/team_b_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#ffffff"
            android:layout_gravity="center_horizontal"
            android:textSize="30dp" />
        <Button
            android:id="@+id/button_11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+3"
            android:onClick="increment_b_by_three"/>
        <Button
            android:id="@+id/button_21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+2"
            android:onClick="increment_b_by_two"/>
        <Button
            android:id="@+id/button_31"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Free Shot"
            android:onClick="increment_b_by_one"/>
    </LinearLayout>

    <Button
        android:id="@+id/final_results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="111dp"
        android:text="End Game"
        android:onClick="end_game"
        />



</RelativeLayout>
